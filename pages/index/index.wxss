/**index.wxss**/
.page {
  background-size: 100%;
  background-position: center top;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.clearfix::after {
  content:'';
  display: block;
  clear: both;
}

.head {
  color: #FFF;
  /*background-size: 100%;
  background-position: center top;
  background-repeat: no-repeat;
  background-attachment: fixed;*/
}

.head .extra {
  padding: 20rpx;
}

.head .extra .city{
  float: left;
}

.head .extra .date{
  float: right;
}

.head .main{

}

.head .main .weather {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  font-size: 60rpx;
}

.head .main .temperature {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  font-size: 120rpx;
  font-weight: bold;
}


.head .main .others {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 34rpx;
}

.head .main .others>view {
   width: 48%;
   text-align: center;
   margin: 10rpx 0;
   white-space: nowrap;
   text-overflow: ellipsis;
}

.hourly {
  border-bottom: 1px solid rgba(255,255,255,0.1);
  height: 140px;
}

.hourly .wrap {
  width: 1440px;
}

.hourly .hour {
   width: 120rpx;
   box-sizing: border-box;
   text-align: center;
   padding: 10px 0;
   display: inline-block;
}

.hourly image {
  width: 60rpx;
  height: 60rpx;
}

.hourly .hour .hour-item {
  padding: 10rpx 0;
}

.suggestion {
  color: #FFF;
}

.suggestion>view {
   padding: 40rpx 20rpx;
}

.suggestion .suggestion-title{
   text-align: center;

}

.suggestion image{
  width: 100rpx;
  height: 100rpx;
  opacity: 0.5;
  float: left;
}

.suggestion .detail {
  margin-left: 140rpx;
}
.suggestion .detail .title {
  font-size: 28rpx;
}

.suggestion .detail .description {
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 1.2;
}